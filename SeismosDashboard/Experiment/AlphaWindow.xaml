<Window x:Class="SeismosDashboard.Experiment.AlphaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SeismosDashboard.Experiment"
        xmlns:vm = "clr-namespace:SeismosDashboard.Experiment"
        mc:Ignorable="d"
        Title="AlphaWindow" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:BetaViewModel}">
            <local:BetaControl></local:BetaControl>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:DeltaViewModel}">
            <local:DeltaControl></local:DeltaControl>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:EpsilonViewModel}">
            <local:EpsilonControl></local:EpsilonControl>
        </DataTemplate>


</Window.Resources>
    <Grid>
        <StackPanel>
            <ContentControl Content="{Binding}" />
        </StackPanel>
    </Grid>
</Window>
