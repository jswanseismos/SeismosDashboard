<UserControl x:Class="SeismosDashboard.Experiment.BetaControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SeismosDashboard.Experiment"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
        <Label Content="{Binding BetaText, Mode=OneWay}" HorizontalAlignment="Left" FontSize="24" VerticalAlignment="Top"/>
            <ContentControl Content="{Binding SubViewModel}"  />
        </StackPanel>
    </Grid>
</UserControl>
